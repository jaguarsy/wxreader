{
  "name": "wxreader",
  "displayName": "微信读书",
  "description": "在VSCode侧边栏展示的微信读书插件",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "微信读书",
    "微信阅读",
    "阅读",
    "wxread",
    "wx",
    "weread"
  ],
  "icon": "resources/logo.png",
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jaguarsy/wxreader.git"
  },
  "publisher": "JohnnyCage",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "wxReader.proxyPort": {
          "type": "number",
          "default": 9701,
          "description": "代理服务端口"
        },
        "wxReader.scale": {
          "type": "number",
          "default": 0.8,
          "description": "缩放比例"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wxReader",
          "title": "wxreader",
          "icon": "./logo.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "wxReader.readerView",
          "type": "webview",
          "name": "wxreader"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npm run package && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "http-proxy-middleware": "^2.0.6"
  }
}
